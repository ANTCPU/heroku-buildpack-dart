#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e
unset GIT_DIR

mkdir -p "$1" "$2"
BUILD_DIR=$(cd "$1/" && pwd)
CACHE_DIR=$(cd "$2/" && pwd)

function message {
  echo "$1"
  sync
}

DART_SDK_URL="https://gsdview.appspot.com/dart-editor-archive-continuous/latest/dart-linux.zip"
DART_SDK=$BUILD_DIR/dart-sdk

if [ ! -d "dart-sdk" ]; then
  message "-----> Installing latest Dart VM"
  cd $BUILD_DIR
  file=dart-linux.zip

  curl -sO -L $DART_SDK_URL -o $file
  unzip $file
  rm -f $file
fi

mkdir -p $BUILD_DIR/bin
mv $DART_SDK/bin/* $BUILD_DIR/bin